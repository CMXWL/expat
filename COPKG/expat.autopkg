			bin: { ..\output\v100\win32\release\bin\libexpatw.dll };
            symbols += { ..\output\v100\win32\release\bin\libexpatw.pdb };
		}

		[x64,v100,dynamic,utf8,release] {
			lib: { ..\output\v100\x64\release\lib\libexpat.lib };
			bin: { ..\output\v100\x64\release\bin\libexpat.dll };
