		[Win32,v110,dynamic,utf8,release] { 
			lib: { ..\output\v110\win32\release\lib\libexpat.lib };
			bin: { ..\output\v110\win32\release\bin\libexpat.dll };
            symbols += { ..\output\v110\win32\release\bin\libexpat.pdb };
		}

		[Win32,v110,dynamic,utf16,release] { 
